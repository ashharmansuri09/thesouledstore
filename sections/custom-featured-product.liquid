{% comment %}
  ðŸ§© Collection Product Slider Section
  - Shows products from selected collection
  - 4 per view desktop, 2 on tablet, 1 on mobile
  - Dynamic Swiper initialization per section
{% endcomment %}
{% style %}
  #collection-slider-{{ section.id }}{
    position: relative;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
>
{% liquid
  assign title = section.settings.title
  assign collection = section.settings.collection
  assign view_all = section.settings.show_view_all_button
%}
<section id="collection-slider-{{ section.id }} " class="collection-slider section-{{section.id }}-padding">
  <div class="page-width">
    {% if title != blank %}
      <h2 class="collection-slider__title text_center">{{ section.settings.title }}</h2>
    {% endif %}

    {% if collection.products.size > 0 %}
      <div class="swiper collectionSwiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {% for product in collection.products %}
            <div class="swiper-slide">
             {% render 'custom-card-product',product:product %}
            </div>
          {% endfor %}
        </div>
        {% if collection.products.size > 4 %}
          <!-- Navigation -->
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        {% endif %}
      </div>
    {% else %}
      <p class="no-products">No products found in this collection.</p>
    {% endif %}
  </div>
  <div class="view-all-products-wrapper">
    {% if view_all %}
      {% if collection and collection.products.size > 0 %}
        <a href="{{ collection.url }}" class="view-all-products">View All Products</a>
      {% endif %}
    {% endif %}
  </div>
</section>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

<!-- Initialize Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.collectionSwiper-{{ section.id }}', {
      slidesPerView:{{ section.settings.slides_per_view }},
      spaceBetween: 20,
      loop: false,
      navigation: {
        nextEl: '#collection-slider-{{ section.id }} .swiper-button-next',
        prevEl: '#collection-slider-{{ section.id }} .swiper-button-prev',
      },
      breakpoints: {
        0: {
          slidesPerView: 1.2,
          spaceBetween: 10,
        },
        768: {
          slidesPerView: 2.2,
          spaceBetween: 15,
        },
        1024: {
          slidesPerView:{{ section.settings.slides_per_view }},
          spaceBetween: 20,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Collection Feature Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "select",
      "id": "slides_per_view",
      "label": "Products per view (Desktop)",
      "options": [
        { "value": "2", "label": "2 products" },
        { "value": "3", "label": "3 products" },
        { "value": "4", "label": "4 products" }
      ],
      "default": "4"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "checkbox",
      "id": "show_view_all_button",
      "label": "Show view all button",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection Feature Slider"
    }
  ]
}
{% endschema %}
