{% style %}
 .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{section.id}}-bg{
    background:{{section.settings.bg_color }};
  }
  .section-{{section.id}}-bg h3{  
     color:{{section.settings.text_color }};
   }
  @media screen and (min-width: 750px) {
    div.section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}
{% liquid
  assign brand =section.settings.brand_text
  assign customer_text = section.settings.customer_text
%}
<section class="brand-banner section-{{section.id}}-padding">
    <div class="brand-top section-{{section.id}}-bg">
      <h3>{{ brand }}</h3>
    </div>
    <div class="brand-bottom">
      <h4 class="brand-text-color">{{ customer_text }}</h4>
    </div>
  </section>
  
{% schema %}
{
    "name": "Brand Banner",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "text",
        "id": "brand_text",
        "label": "Brand Text",
        "default": "HOMEGROWN INDIAN BRAND"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Brand Text Color",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Brand BG Color",
        "default": "#7008E7"
      },
      {
        "type": "inline_richtext",
        "id": "customer_text",
        "default": "Over 6 Million Happy Customers",
        "label": "Customer Text"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
        {
          "name": "Brand Banner"
        }
      ]
}
{% endschema %}